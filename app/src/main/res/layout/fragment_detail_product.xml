<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="product"
            type="com.ponomar.shoper.model.entities.Product" />
        <variable
            name="vm"
            type="com.ponomar.shoper.ui.detail.ProductDetailViewModel" />
    </data>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="40dp"
        android:layout_gravity="center"
        android:layout_width="325dp"
        android:layout_height="300dp">
        <ImageView
            app:imageUrl="@{product.images[0]}"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="@{product.title}"/>
    <TextView
        android:padding="8dp"
        android:text="@{product.desc}"
        android:textSize="21sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@drawable/round_layout"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:id="@+id/fragment_detail_container_with_button"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                setGone="@{vm.isLoading()}"
                android:id="@+id/fragment_detail_button_add_in_cart"
                android:text="Добавить в корзину"
                android:textSize="19sp"
                android:background="@drawable/round_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ProgressBar
                setGone="@{!vm.isLoading()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_detail_container_with_counter"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/fragment_detail_button_minus"
                    android:src="@drawable/ic_minus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ProgressBar
                        setGone="@{!vm.isLoading()}"
                        android:padding="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/fragment_detail_quantity"
                        setGone="@{vm.isLoading()}"
                        android:gravity="center"
                        android:textSize="35sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/fragment_detail_button_plus"
                    android:src="@drawable/ic_plus"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</layout>